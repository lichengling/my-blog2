

.notify-item{
  width: 100%;
  background: #ffffff;
  padding: 25rpx 70rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
  display: flex;
}

.notify-item  .avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-left: 60rpx;
}

.notify-item .notify-content{
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  margin: 8rpx 0 0 30rpx;
}

.notify-item .notify-source{
  color: #000;
  font-size: 36rpx;
  padding: 0 0 8rpx 0;
}

.notify-item .notify-title{
  color: gray;
  font-size: 32rpx;
}