.container{
  height: 1500rpx;
}

.search{
  width: 100%;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
  display: flex;
}

.search .search-left{
  height: 100%;
  width: 85%;
  background: #4EA3E7;
}

.search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}

.search .search-right{
  height: 100%;
  width: 15%;
  text-align: center;
}

.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

